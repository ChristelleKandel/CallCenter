{% extends 'base.html.twig' %}

{% block title %}Societe index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center"><a href="{{ path('app_societe_new') }}" class="btn btn-lg btn-green m-2">Ajouter une société</a><a href="{{ path('app_users') }}" class="btn btn-lg btn-orange m-2">Retour aux utilisateurs</a></div>
    <h1 class="text-center">Liste des Sociétés</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Nom_contact</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for societe in societes %}
            <tr>
                <td>{{ societe.id }}</td>
                <td>{{ societe.nom }}</td>
                <td>{{ societe.ville }}</td>
                <td>{{ societe.tel }}</td>
                <td>{{ societe.nomContact }}</td>
                <td>{{ societe.email }}</td>
                <td>
                    <a href="{{ path('app_societe_show', {'id': societe.id}) }}" class="btn btn-green"><i class="fa-solid fa-magnifying-glass"></i> Voir plus</a>
                    <a href="{{ path('app_societe_edit', {'id': societe.id}) }}" class="btn btn-bleu">Modifier</
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
