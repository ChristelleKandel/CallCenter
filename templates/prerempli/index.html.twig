{% extends 'base.html.twig' %}

{% block title %}Prerempli index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des pré-remplis</h1>
    <a href="{{ path('app_prerempli_new') }}" class="btn btn-lg btn-green d-grid gap-2 col-6 mx-auto my-2">Ajouter un pré-rempli</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for prerempli in preremplis %}
            <tr>
                <td>{{ prerempli.id }}</td>
                <td>{{ prerempli.texte }}</td>
                <td>
                    {{ include('prerempli/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
