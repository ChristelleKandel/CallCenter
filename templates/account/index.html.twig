{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}

<div class="container text-center">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Mon compte</h1>
            <h2> Bienvenue {{ app.user.fullName }}</h2>
            <p> Email: {{ app.user.email }}</p>
            <p> Société: {{ app.user.societe.nom }}</p>
            <p> <small> Compte créé le {{ app.user.createdAt|date('d/m/Y') }} </small> </p>
            <p> 
            <a class="btn btn-lg btn-orange d-grid gap-2 col-6 mx-auto my-2" href="{{ path('app_account_edit') }}">Modifier mon compte</a> 
            <a class="btn btn-lg btn-violet d-grid gap-2 col-6 mx-auto my-2" href="{{ path('app_account_password') }}">Changer mon mot de passe </a>
            <a class="btn btn-lg btn-bleu d-grid gap-2 col-6 mx-auto my-2" href="{{ path('app_missions_index') }}"> Aller sur la page des missions </a> 
            </p>
        </div>
    </div>
</div>
{% endblock %}
