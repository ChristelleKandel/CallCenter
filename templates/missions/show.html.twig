{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block body %}
    <h1>Missions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ mission.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ mission.type }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ mission.dateDebut ? mission.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ mission.dateFin ? mission.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Script</th>
                <td>{{ mission.script }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ mission.commentaires }}</td>
            </tr>
            <tr>
                <th>Email_rdv_client_text</th>
                <td>{{ mission.emailRdvClientText }}</td>
            </tr>
            <tr>
                <th>Email_rdv_prospect_text</th>
                <td>{{ mission.emailRdvProspectText }}</td>
            </tr>
            <tr>
                <th>Champs</th>
                <td>
                {% for champ in mission.champs %}
                    {{ champ }}
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Rdv_date</th>
                <td>{{ mission.rdvDate ? mission.rdvDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ mission.fichier }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_missions_index') }}">back to list</a>

    <a href="{{ path('app_missions_edit', {'id': mission.id}) }}">edit</a>

    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
