{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center"><a class="btn btn-lg btn-bleu my-2 mx-auto" href="{{ path('app_missions_actuelles') }}"><i class="fa-solid fa-arrow-left"></i> Retour</a></div>
    <h1>Mission {{ mission.titre }}</h1>
    DU {{ mission.dateDebut|date('d-m-Y') }} au {{ mission.dateFin|date('d-m-Y') }}
    <h2>Une mission confiée par {{ mission.societe.nom }} </h2>
    <p>
        Mettre l'image et lien balise img{{ mission.societe.logo }}
        </br>
        Ville: {{ mission.societe.ville }} </br>
        Téléphone: {{ mission.societe.tel }} </br>
        Contact {{ mission.societe.nomContact }} </br>
        {{ mission.societe.commentaires }}
    </p>
    <p>
        <h4> SCRIPT </h4>
        {{ mission.societe.nom}} {{ user.prenom }}, bonjour </br>
        {{ mission.script }} </br>
        {{ mission.commentaires }}
    </p>



    <a href="{{ path('app_missions_actuelles') }}" class="btn btn-lg btn-bleu d-grid gap-2 col-6 mx-auto my-2">Retour missions</a>
{% endblock %}
