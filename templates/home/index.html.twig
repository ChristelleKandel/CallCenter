{% extends 'base.html.twig' %}

{% block title %}CallCenter{% endblock %}

{% block body %}
<div class="text-center">
    <h1 class="m-5">Bonjour</h1>
    {# Je rajoute une condition: si app.user existe, je veux ajouter son nom, sinon je mets le message "connectez-vous" #}
    <h2> {{ (app.user ? app.user.fullName : "Connectez-vous") }} </h2>
    <p>
        <a href="{{ path('app_login') }}">Se connecter</a> <br> <br>
    </p>
    <p>
        Il est actuellement {{ 'now'|date('h:i A', 'Europe/Paris') }}, heure de Paris.
    </p>


    <div class="d-flex justify-content-center">
        <div class="calendar border">
            <p id="dayName"></p>
            <p id="dayNumber"></p>
            <p id="monthName"></p>
        </div>
    </div>
</div>

<script src="{{ asset('js/calendrier.js') }}"></script>
{% endblock %}
